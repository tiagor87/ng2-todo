// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/*.js": {"when": "$(basename).ts"},
        "**/*.js.map": true,
        "dist_*": true,
        "node_modules": true,
        "uploads": true,
        "typings": true
    },
    "editor.tabSize": 2,
    "typescript.tsdk": "node_modules/typescript/lib"
}